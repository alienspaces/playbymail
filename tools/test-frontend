#!/usr/bin/env sh

set -e

orig_dir="$(pwd)"

echo "â–¶ï¸  Running frontend tests..."

# Ensure we are in the project root
if [ ! -f "frontend/package.json" ]; then
    echo "âŒ Error: This script must be run from the 'playbymail' project root directory."
    exit 1
fi

# Navigate to the frontend directory
cd frontend

# Install dependencies if node_modules doesn't exist
if [ ! -d "node_modules" ]; then
    echo "ğŸ“¦ node_modules not found, running 'npm ci'..."
    npm ci
else
    echo "ğŸ“¦ Dependencies already installed."
fi

# Run linter
echo "ğŸ” Running linter..."
npm run lint

# Run build
echo "ğŸ—ï¸  Running build..."
npm run build

# Run unit tests
echo "ğŸ§ª Running unit tests..."
npm run test:unit

echo "âœ… Frontend tests completed successfully."

# Return to the original directory
cd "$orig_dir"
