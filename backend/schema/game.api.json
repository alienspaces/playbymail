{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://playbymail.dev/schema/game.api.json",
    "title": "Game",
    "description": "Game",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "common.api.json#/$defs/id"
        },
        "name": {
            "description": "The name of the game.",
            "type": "string",
            "minLength": 1,
            "maxLength": 1024,
            "examples": [
                "Game 1",
                "Game 2",
                "Game 3"
            ]
        },
        "game_type": {
            "description": "The type of the game.",
            "type": "string",
            "enum": [
                "adventure"
            ],
            "minLength": 1,
            "maxLength": 50,
            "examples": [
                "adventure"
            ]
        },
        "created_at": {
            "$ref": "common.api.json#/$defs/created_at"
        },
        "updated_at": {
            "$ref": "common.api.json#/$defs/updated_at"
        }
    },
    "required": [
        "id",
        "name",
        "game_type",
        "created_at"
    ],
    "additionalProperties": false
}