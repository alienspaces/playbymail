{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://playbymail.games/schema/game_schema/game.request.schema.json",
    "title": "Game request data",
    "type": "object",
    "properties": {
        "game_type": {
            "description": "The type of the game. Only 'adventure' is supported.",
            "enum": [
                "adventure"
            ],
            "type": "string"
        },
        "name": {
            "description": "The name of the game.",
            "examples": [
                "Game 1",
                "Game 2",
                "Game 3"
            ],
            "maxLength": 1024,
            "minLength": 1,
            "type": "string"
        }
    },
    "required": [
        "name",
        "game_type"
    ],
    "additionalProperties": false
}