{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.games/schema/game_schema/game_subscription.request.schema.json",
    "title": "GameSubscriptionRequest",
    "type": "object",
    "properties": {
        "account_id": {
            "format": "uuid",
            "type": "string"
        },
        "account_user_contact_id": {
            "format": "uuid",
            "type": "string"
        },
        "game_id": {
            "format": "uuid",
            "type": "string"
        },
        "subscription_type": {
            "enum": [
                "player",
                "manager",
                "designer"
            ],
            "type": "string"
        },
        "instance_limit": {
            "type": "integer",
            "minimum": 1
        }
    },
    "required": [
        "game_id",
        "account_id",
        "subscription_type"
    ],
    "additionalProperties": false
}