{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.games/schema/game_schema/game_subscription.schema.json",
    "title": "GameSubscription",
    "type": "object",
    "properties": {
        "account_id": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
        },
        "created_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/created_at"
        },
        "deleted_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "game_id": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
        },
        "id": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
        },
        "subscription_type": {
            "enum": [
                "player",
                "manager",
                "designer"
            ],
            "type": "string"
        },
        "updated_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "status": {
            "type": "string",
            "enum": [
                "pending_approval",
                "active",
                "revoked"
            ]
        },
        "instance_limit": {
            "type": "integer",
            "minimum": 1
        },
        "game_instance_ids": {
            "type": "array",
            "items": {
                "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
            }
        }
    },
    "required": [
        "id",
        "game_id",
        "account_id",
        "subscription_type",
        "status",
        "created_at"
    ],
    "additionalProperties": false
}