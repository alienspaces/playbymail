{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.games/schema/game_schema/game_instance.request.schema.json",
    "title": "GameInstanceRequest",
    "type": "object",
    "properties": {
        "game_id": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
        },
        "current_turn": {
            "minimum": 0,
            "type": "integer"
        },
        "last_turn_processed_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "next_turn_due_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "started_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "completed_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "status": {
            "enum": [
                "created",
                "started",
                "paused",
                "completed",
                "cancelled"
            ],
            "type": "string"
        },
        "delivery_physical_post": {
            "type": "boolean"
        },
        "delivery_physical_local": {
            "type": "boolean"
        },
        "delivery_email": {
            "type": "boolean"
        },
        "required_player_count": {
            "minimum": 0,
            "type": "integer"
        },
        "is_closed_testing": {
            "type": "boolean"
        }
    },
    "required": [
        "game_id"
    ],
    "additionalProperties": false
}