{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.games/schema/game_schema/game_instance.request.schema.json",
    "title": "GameInstanceRequest",
    "type": "object",
    "properties": {
        "completed_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "current_turn": {
            "minimum": 0,
            "type": "integer"
        },
        "game_id": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
        },
        "last_turn_processed_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "max_turns": {
            "minimum": 1,
            "type": [
                "integer",
                "null"
            ]
        },
        "next_turn_deadline": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "started_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "status": {
            "enum": [
                "created",
                "starting",
                "running",
                "paused",
                "completed",
                "cancelled"
            ],
            "type": "string"
        },
        "turn_deadline_hours": {
            "minimum": 1,
            "type": "integer"
        }
    },
    "required": [
        "game_id"
    ],
    "additionalProperties": false
}