{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.games/schema/game_schema/game_parameter.schema.json",
    "title": "GameParameter",
    "type": "object",
    "properties": {
        "game_type": {
            "enum": [
                "adventure"
            ],
            "type": "string"
        },
        "config_key": {
            "maxLength": 100,
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "value_type": {
            "enum": [
                "string",
                "integer",
                "boolean"
            ],
            "type": "string"
        },
        "default_value": {
            "type": "string"
        }
    },
    "required": [
        "game_type",
        "config_key",
        "value_type"
    ],
    "additionalProperties": false
}