{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.games/schema/game_schema/game_instance.schema.json",
    "title": "GameInstance",
    "type": "object",
    "properties": {
        "completed_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "created_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/created_at"
        },
        "current_turn": {
            "minimum": 0,
            "type": "integer"
        },
        "game_id": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
        },
        "game_subscription_id": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
        },
        "id": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
        },
        "last_turn_processed_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "next_turn_due_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "started_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "status": {
            "enum": [
                "created",
                "started",
                "paused",
                "completed",
                "cancelled"
            ],
            "type": "string"
        },
        "delivery_physical_post": {
            "type": "boolean"
        },
        "delivery_physical_local": {
            "type": "boolean"
        },
        "delivery_email": {
            "type": "boolean"
        },
        "required_player_count": {
            "minimum": 0,
            "type": "integer"
        },
        "player_count": {
            "minimum": 0,
            "type": "integer"
        },
        "is_closed_testing": {
            "type": "boolean"
        },
        "join_game_key": {
            "type": [
                "string",
                "null"
            ]
        },
        "join_game_key_expires_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "updated_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        }
    },
    "required": [
        "id",
        "game_id",
        "game_subscription_id",
        "status",
        "current_turn",
        "delivery_physical_post",
        "delivery_physical_local",
        "delivery_email",
        "required_player_count",
        "player_count",
        "is_closed_testing",
        "created_at"
    ],
    "additionalProperties": false
}