{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://playbymail.games/schema/game_schema/game.schema.json",
    "title": "Game",
    "type": "object",
    "properties": {
        "created_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/created_at"
        },
        "game_type": {
            "description": "The type of the game.",
            "enum": [
                "adventure"
            ],
            "examples": [
                "adventure"
            ],
            "maxLength": 50,
            "minLength": 1,
            "type": "string"
        },
        "id": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
        },
        "name": {
            "description": "The name of the game.",
            "examples": [
                "Game 1",
                "Game 2",
                "Game 3"
            ],
            "maxLength": 1024,
            "minLength": 1,
            "type": "string"
        },
        "updated_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        }
    },
    "required": [
        "id",
        "name",
        "game_type",
        "created_at"
    ],
    "additionalProperties": false
}