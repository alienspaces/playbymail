{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.games/schema/account_schema/account_user.schema.json",
    "title": "AccountUser",
    "type": "object",
    "properties": {
        "created_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/created_at"
        },
        "email": {
            "format": "email",
            "type": "string"
        },
        "id": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
        },
        "account_id": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/id"
        },
        "updated_at": {
            "$ref": "http://playbymail.games/schema/common_schema/common.schema.json#/$defs/updated_at"
        },
        "status": {
            "type": "string",
            "enum": [
                "pending_approval",
                "active",
                "disabled"
            ]
        }
    },
    "required": [
        "id",
        "account_id",
        "email",
        "created_at",
        "status"
    ],
    "additionalProperties": false
}