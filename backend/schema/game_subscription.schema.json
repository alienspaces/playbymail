{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "GameSubscription",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "game_id": {
            "type": "string",
            "format": "uuid"
        },
        "account_id": {
            "type": "string",
            "format": "uuid"
        },
        "subscription_type": {
            "type": "string",
            "enum": [
                "Player",
                "Manager",
                "Collaborator"
            ]
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": [
                "string",
                "null"
            ],
            "format": "date-time"
        },
        "deleted_at": {
            "type": [
                "string",
                "null"
            ],
            "format": "date-time"
        }
    },
    "required": [
        "id",
        "game_id",
        "account_id",
        "subscription_type",
        "created_at"
    ],
    "additionalProperties": false
}