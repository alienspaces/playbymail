{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.dev/schema/location.schema.json",
    "title": "Location",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "common.schema.json#/$defs/id"
        },
        "game_id": {
            "$ref": "common.schema.json#/$defs/id"
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "description": {
            "type": "string"
        },
        "created_at": {
            "$ref": "common.schema.json#/$defs/created_at"
        },
        "updated_at": {
            "$ref": "common.schema.json#/$defs/updated_at"
        },
        "deleted_at": {
            "$ref": "common.schema.json#/$defs/updated_at"
        }
    },
    "required": [
        "id",
        "game_id",
        "name",
        "created_at"
    ]
}