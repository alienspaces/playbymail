{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.games/schema/turn_sheets/print_layouts/adventure_location_choice.schema.json",
    "title": "AdventureLocationChoiceLayout",
    "type": "object",
    "properties": {
        "layout_type": {
            "type": "string",
            "const": "adventure_location_choice"
        },
        "page_size": {
            "type": "string",
            "enum": [
                "letter",
                "a4"
            ],
            "default": "letter"
        },
        "orientation": {
            "type": "string",
            "enum": [
                "portrait",
                "landscape"
            ],
            "default": "portrait"
        },
        "sections": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "section_type": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string"
                    },
                    "position": {
                        "type": "object",
                        "properties": {
                            "x": {
                                "type": "number"
                            },
                            "y": {
                                "type": "number"
                            },
                            "width": {
                                "type": "number"
                            },
                            "height": {
                                "type": "number"
                            }
                        }
                    }
                }
            }
        },
        "form_fields": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "field_id": {
                        "type": "string"
                    },
                    "field_type": {
                        "type": "string"
                    },
                    "position": {
                        "type": "object",
                        "properties": {
                            "x": {
                                "type": "number"
                            },
                            "y": {
                                "type": "number"
                            },
                            "width": {
                                "type": "number"
                            },
                            "height": {
                                "type": "number"
                            }
                        }
                    }
                }
            }
        }
    },
    "required": [
        "layout_type"
    ],
    "additionalProperties": false
}