{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.dev/schema/game_instance_configuration.api.json",
    "title": "GameInstanceConfiguration",
    "type": "object",
    "properties": {
        "id": {
            "$ref": "common.api.json#/$defs/id"
        },
        "game_instance_id": {
            "$ref": "common.api.json#/$defs/id"
        },
        "config_key": {
            "type": "string",
            "maxLength": 100
        },
        "value_type": {
            "type": "string",
            "enum": [
                "string",
                "integer",
                "boolean",
                "json"
            ]
        },
        "string_value": {
            "type": [
                "string",
                "null"
            ]
        },
        "integer_value": {
            "type": [
                "integer",
                "null"
            ]
        },
        "boolean_value": {
            "type": [
                "boolean",
                "null"
            ]
        },
        "json_value": {
            "type": [
                "string",
                "null"
            ]
        },
        "created_at": {
            "$ref": "common.api.json#/$defs/created_at"
        },
        "updated_at": {
            "$ref": "common.api.json#/$defs/updated_at"
        },
        "deleted_at": {
            "$ref": "common.api.json#/$defs/updated_at"
        }
    },
    "required": [
        "id",
        "game_instance_id",
        "config_key",
        "value_type",
        "created_at"
    ],
    "additionalProperties": false
}