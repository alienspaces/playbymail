{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://api.disputeservice.trevipay.app/schema/disputeservice/api/client.request.schema.json",
    "title": "Client request data",
    "description": "Request payload data for a client",
    "type": "object",
    "additionalProperties": true,
    "required": [
        "name",
        "game_type"
    ],
    "properties": {
        "name": {
            "$ref": "../common/client.schema.json#/$defs/name"
        },
        "game_type": {
            "type": "string",
            "enum": [
                "adventure"
            ],
            "description": "The type of the game. Only 'adventure' is supported."
        }
    }
}