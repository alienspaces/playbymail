{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://playbymail.dev/schema/game.schema.json",
    "title": "Game",
    "description": "Game",
    "$defs": {
        "resource": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "$ref": "#/$defs/game_id"
                },
                "name": {
                    "$ref": "#/$defs/name"
                },
                "type": {
                    "description": "The type of the game.",
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 50,
                    "examples": [
                        "adventure"
                    ]
                },
                "created_at": {
                    "$ref": "../common/common.schema.json#/$defs/created_at"
                },
                "updated_at": {
                    "$ref": "../common/common.schema.json#/$defs/updated_at"
                }
            }
        },
        "game_id": {
            "description": "Unique game resource ID.",
            "type": "string",
            "format": "uuid",
            "example": "3c87bd2b-df9a-413b-94ab-0238dcacaf68"
        },
        "name": {
            "description": "The name of the game.",
            "type": "string",
            "minLength": 1,
            "maxLength": 1024,
            "examples": [
                "Game 1",
                "Game 2",
                "Game 3"
            ]
        }
    }
}