{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LocationLink",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "format": "uuid"
        },
        "from_location_id": {
            "type": "string",
            "format": "uuid"
        },
        "to_location_id": {
            "type": "string",
            "format": "uuid"
        },
        "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": [
                "string",
                "null"
            ],
            "format": "date-time"
        },
        "deleted_at": {
            "type": [
                "string",
                "null"
            ],
            "format": "date-time"
        }
    },
    "required": [
        "id",
        "from_location_id",
        "to_location_id",
        "description",
        "name",
        "created_at"
    ]
}