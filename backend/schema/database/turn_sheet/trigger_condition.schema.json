{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://playbymail.dev/schema/internal/turn_sheet/trigger_condition.schema.json",
  "title": "TurnSheetTriggerCondition",
  "type": "object",
  "properties": {
    "game_state": {
      "type": "string",
      "enum": ["player_at_location", "player_in_combat", "items_available", "conversation_active"]
    },
    "location_has_exits": {"type": "boolean"},
    "exits_count": {
      "type": "object",
      "properties": {
        "min": {"type": "integer"},
        "max": {"type": "integer"}
      }
    },
    "enemies_present": {"type": "boolean"},
    "player_inventory_changed": {"type": "boolean"},
    "conversation_requires_choice": {"type": "boolean"}
  },
  "required": ["game_state"],
  "additionalProperties": false
} 