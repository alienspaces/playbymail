{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.games/schema/internal/turn_sheet/scanned_data.schema.json",
    "title": "TurnSheetScannedData",
    "type": "object",
    "properties": {
        "selected_options": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "text_input": {
            "type": "string"
        },
        "number_input": {
            "type": "number"
        },
        "inventory_changes": {
            "type": "object",
            "properties": {
                "equipped": {
                    "type": "array"
                },
                "unequipped": {
                    "type": "array"
                },
                "dropped": {
                    "type": "array"
                }
            }
        },
        "combat_actions": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "target_id": {
                        "type": "string"
                    },
                    "action_type": {
                        "type": "string"
                    }
                }
            }
        },
        "scan_metadata": {
            "type": "object",
            "properties": {
                "ocr_confidence": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "scan_quality_score": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "processing_notes": {
                    "type": "string"
                }
            }
        }
    },
    "additionalProperties": false
}