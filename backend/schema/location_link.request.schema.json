{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LocationLinkRequest",
    "type": "object",
    "properties": {
        "from_location_id": {
            "type": "string",
            "format": "uuid"
        },
        "to_location_id": {
            "type": "string",
            "format": "uuid"
        },
        "description": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 64
        }
    },
    "required": [
        "from_location_id",
        "to_location_id",
        "description",
        "name"
    ]
}