{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://playbymail.dev/schema/game_configuration.request.api.json",
    "title": "GameConfigurationRequest",
    "type": "object",
    "properties": {
        "game_type": {
            "type": "string",
            "enum": [
                "adventure",
                "strategy",
                "puzzle",
                "simulation"
            ]
        },
        "config_key": {
            "type": "string",
            "maxLength": 100
        },
        "value_type": {
            "type": "string",
            "enum": [
                "string",
                "integer",
                "boolean",
                "json"
            ]
        },
        "default_value": {
            "type": [
                "string",
                "null"
            ]
        },
        "is_required": {
            "type": "boolean"
        },
        "description": {
            "type": [
                "string",
                "null"
            ]
        },
        "ui_hint": {
            "type": [
                "string",
                "null"
            ],
            "maxLength": 50
        },
        "validation_rules": {
            "type": [
                "string",
                "null"
            ]
        }
    },
    "required": [
        "game_type",
        "config_key",
        "value_type",
        "is_required"
    ],
    "additionalProperties": false
}